<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:stretchColumns="3">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:scaleX="3"
            android:src="@drawable/pic1"

            />


    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:descendantFocusability="beforeDescendants"
        android:orientation="vertical"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/tv1"
            android:layout_gravity="center_vertical"
            android:maxWidth="100dp"
            android:text="pic1" />

        <RatingBar
            android:id="@+id/rbar1"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_gravity="center"
            android:maxWidth="100dp" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv2"
            android:layout_gravity="center_vertical"
            android:text="pic2" />

        <RatingBar
            android:id="@+id/rbar2"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_gravity="center"
            android:numStars="5"

            android:stepSize="1" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv3"
            android:layout_gravity="center_vertical"
            android:text="pic3"

            />

        <RatingBar
            android:id="@+id/rbar3"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_gravity="center"
            android:numStars="5"

            android:stepSize="1" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv4"
            android:layout_gravity="center_vertical"
            android:text="pic4"

            />

        <RatingBar
            android:id="@+id/rbar4"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_gravity="center"
            android:numStars="5"

            android:stepSize="1" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv5"
            android:layout_gravity="center_vertical"
            android:text="pic5"

            />

        <RatingBar
            android:id="@+id/rbar5"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_gravity="center"
            android:numStars="5"

            android:stepSize="1" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv6"
            android:layout_gravity="center_vertical"
            android:text="pic6"

            />

        <RatingBar
            android:id="@+id/rbar6"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_gravity="center"
            android:numStars="5"

            android:stepSize="1" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv7"
            android:layout_gravity="center_vertical"
            android:text="pic7"

            />

        <RatingBar
            android:id="@+id/rbar7"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_gravity="center"
            android:numStars="5"

            android:stepSize="1" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv8"
            android:layout_gravity="center_vertical"
            android:text="pic8"

            />

        <RatingBar
            android:id="@+id/rbar8"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="1" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:descendantFocusability="beforeDescendants"
        android:orientation="vertical"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/tv9"
            android:layout_gravity="center_vertical"
            android:text="pic9"

            />

        <RatingBar
            android:id="@+id/rbar9"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_gravity="center"
            android:numStars="5"

            android:stepSize="1" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnBack"
            android:layout_gravity="center_vertical"
            android:layout_span="2"
            android:gravity="center"
            android:text="Back" />
    </TableRow>

</TableLayout>